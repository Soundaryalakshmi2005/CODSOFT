print ("Calculator")

first_number = float(input("Enter the First number: "))
second_number = float(input("Enter the Second number: "))

print ("Press 0 for addition")
print ("Press 1 for subtraction")
print ("Press 2 for multiplication")
print("Press 3 for division")

choice = int(input("Enter your choice: "))

if choice == 0:
    sum = first_number+second_number
    print ("The sum of two numbers is =",sum)
elif choice == 1:
    difference = first_number-second_number
    print ("The difference of two numbers is =",difference)
elif choice == 2:
    product = first_number*second_number
    print ("The product of two numer is =",product)
elif choice == 3:
    division = first_number/second_number
    print ("The division of two numbers is =",division)
else:
    print ("Invalid Choice!!!")
